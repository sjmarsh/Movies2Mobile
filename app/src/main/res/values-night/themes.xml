<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Movies2Mobile" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="cardBackgroundColor">@color/cardview_dark_background</item>
        <item name="chipStyle">@style/Movies2Mobile.Chip</item>
    </style>
    <style name="Movies2Mobile.Chip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipMinHeight">18dp</item>
        <item name="chipMinTouchTargetSize">18dp</item>
        <item name="closeIconVisible">false</item>
    </style>
</resources>